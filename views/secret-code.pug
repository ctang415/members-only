extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='code') Enter code:
      input#code.form-control(type='password', placeholder='Enter' name='code' required='true' value=(undefined===book ? '' : book.title) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
