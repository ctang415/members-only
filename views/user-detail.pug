extends layout

block content

  h1 #{user.email}
  div
    p <strong>Name</strong> : #{user.fullname}
    p <strong>Account Created</strong>: #{user.creation_formatted}
    p <strong>Membership</strong>: #{user.membership_status}

  div
    h4 Posts
  div
    dl
      each post in user_posts
        dt
          a(href=post.url) #{post.title}
        dd #{post.message}

      else
        p This user has no posts.
